<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Restaurants</h1>
        <%  @restaurants.each do |restaurant| %>
          <p>
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
            <%= link_to "(delete)",
                  restaurant_path(restaurant),
                  method: :delete %>
          </p>
        <% end %>

      <%= link_to "+ add a restaurant", new_restaurant_path %>
    </div>
  </div>
</div>
