<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Add Review for <%= @restaurant.name %></h1>
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %> 
    </div>
  </div>
</div>